<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TabLayout">
        <attr name="indicatorStartColor" format="color|reference" />
        <attr name="indicatorEndColor" format="color|reference" />
        <attr name="indicatorMarginStart" format="dimension|reference" />
        <attr name="indicatorMarginEnd" format="dimension|reference" />
        <attr name="indicatorMarginBottom" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="ScaleTabLayout">
        <attr name="stl_unSelTextSize" format="dimension" />
        <attr name="stl_selTextSize" format="dimension" />
        <attr name="stl_unSelTextColor" format="color" />
        <attr name="stl_selTextColor" format="color" />
        <attr name="stl_tabSpacing" format="dimension" />
        <attr name="stl_leftMargin" format="dimension" />
        <attr name="stl_rightMargin" format="dimension" />
        <attr name="stl_isSelTextBold" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DownloadProgressButton">
        <attr name="progress_btn_radius" format="dimension" />
        <attr name="progress_btn_background_color" format="color" />
        <attr name="progress_btn_background_second_color" format="color" />
        <attr name="progress_btn_text_color" format="color" />
        <attr name="progress_btn_text_cover_color" format="color" />
        <attr name="progress_btn_border_width" format="dimension" />
        <attr name="progress_btn_ball_style" format="enum">
            <enum name="STYLE_BALL_PULSE" value="1" />
            <enum name="STYLE_BALL_JUMP" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="PhoneCode">

        <!-- 验证码长度 默认5 -->

        <attr name="codeLength" format="integer" />

        <!-- 验证码字体大小 8-->

        <attr name="codeTextSize" format="dimension" />

        <!-- 验证码字体颜色 -->

        <attr name="codeTextColor" format="color" />

        <!-- 验证码框的宽度 -->

        <attr name="tvWidth" format="dimension" />

        <!-- 验证码框的高度 -->

        <attr name="tvHeight" format="dimension" />

        <!-- 验证码框间距 -->

        <attr name="codeMargin" format="dimension" />

        <!-- 验证码默认背景 -->

        <attr name="bgNormal" format="reference" />

        <!-- 验证码焦点背景 -->

        <attr name="bgFocus" format="reference" />


        <!--输入框样式-->

        <attr name="codeStyle" format="integer" />

        <!--正常时边框颜色-->

        <attr name="normalStrokeColor" format="color" />

        <!--正常时内容背景颜色-->

        <attr name="normalContentColor" format="color" />

        <!--焦点时边框颜色-->

        <attr name="focusStrokeColor" format="color" />

        <!--焦点时内容背景颜色-->

        <attr name="focusContentColor" format="color" />

        <!--是否加粗-->

        <attr name="isBold" format="boolean" />

        <!--边框的宽度-->

        <attr name="strokeSize" format="dimension" />

        <!--是否输入类型为数字  默认true -->

        <attr name="isNumber" format="boolean" />

        <!--是否隐藏输入为密码符号  默认false -->

        <attr name="isShowPwd" format="boolean" />


    </declare-styleable>

</resources>